<div class="container">
  <div class="row mt-3">
    <div class="badge bg-light">
      <%= @user.nick_name %>さんの詳細
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3 badge bg-light">
      会員ID
    </div>
    <div class="col-4">
      <%= @user.id %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 badge bg-light">
      登録名
    </div>
    <div class="col-4">
      <%= @user.nick_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 badge bg-light">
      メールアドレス
    </div>
    <div class="col-4">
      <%= @user.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 badge bg-light">
      登録住所
    </div>
    <div class="col-4">
      <%= @user.prefectural %><%= @user.city %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 badge bg-light">
      登録日
    </div>
    <div class="col-4">
      <%= @user.created_at.strftime('%Y/%m/%d/ %H:%M') %>
    </div>
  </div>
</div>