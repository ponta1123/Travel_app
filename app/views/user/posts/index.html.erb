<div class="container">
  <div class="row">
    <div class="col-4">

    </div>
    <div class="col-8 mt-4">
     <h3>自分の投稿一覧</h3>
     <table border  width="50%" height="40%">
       <tr>
         <th>タイトル</th>
         <th>投稿内容</th>
       </tr>
       <% @posts.each do |post| %>
        <tr>
         <td><%= post.title %></td>
         <td><%= post.introduction %></td>
        </tr>
       <% end %>
     </table>
     </div>
  </div>
</div>